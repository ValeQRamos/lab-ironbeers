

<div id="randomApi" >
  {{#each randomApi }}

  <div class="randomPhoto">
    <img src=" {{image_url}} " alt=" {{name}} ">
  </div>

  <div class="random-info">
    <h1> {{name}} </h1>
    <p> {{tagline}} </p>
    <p> {{description}} </p>
    
    <br><br>

    <h2>Food Pairing</h2>

    <ul class="pairing">
      {{#each food_pairing}}
        <li> {{this}} </li>
      {{/each}}
    </ul>

    <br><br>

    <p> <span>Brewers Tips:</span> {{brewers_tips}} </p>
  </div>


  {{/each}}
</div>